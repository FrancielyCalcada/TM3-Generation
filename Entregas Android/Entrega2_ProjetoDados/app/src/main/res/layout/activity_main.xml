<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/imageLados"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E7393535"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtD20"
        android:layout_width="42dp"
        android:layout_height="57dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="150dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="1" />

    <TextView
        android:id="@+id/txtD12"
        android:layout_width="42dp"
        android:layout_height="57dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="80dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txtD20"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="1" />

    <TextView
        android:id="@+id/txtD6"
        android:layout_width="42dp"
        android:layout_height="57dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="80dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txtD12"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="1" />

    <Button
        android:id="@+id/btnD6"
        android:layout_width="104dp"
        android:layout_height="57dp"
        android:layout_marginBottom="80dp"
        android:backgroundTint="#A70C0C"
        android:text="@string/d6"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnD12"
        app:layout_constraintEnd_toStartOf="@+id/txtD6"
        app:layout_constraintStart_toEndOf="@+id/imageD6" />

    <Button
        android:id="@+id/btnD12"
        android:layout_width="104dp"
        android:layout_height="57dp"
        android:layout_marginBottom="80dp"
        android:backgroundTint="#A70C0C"
        android:text="@string/d12"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnD20"
        app:layout_constraintEnd_toStartOf="@+id/txtD12"
        app:layout_constraintStart_toEndOf="@+id/imageD12" />

    <Button
        android:id="@+id/btnD20"
        android:layout_width="104dp"
        android:layout_height="57dp"
        android:layout_marginBottom="150dp"
        android:backgroundTint="#A70C0C"
        android:text="@string/d20"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/txtD20"
        app:layout_constraintStart_toEndOf="@+id/imageD20" />

    <ImageView
        android:id="@+id/imageDadoLogo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="70dp"
        android:contentDescription="TODO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rolling_dices"
        tools:ignore="ImageContrastCheck" />

    <ImageView
        android:id="@+id/imageD20"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/dice_twenty_faces_twenty"
        android:contentDescription="TODO" />

    <ImageView
        android:id="@+id/imageD12"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toTopOf="@+id/imageD20"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/d12" />

    <ImageView
        android:id="@+id/imageD6"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toTopOf="@+id/imageD12"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/perspective_dice_six_faces_six__1_"
        android:contentDescription="TODO" />

</androidx.constraintlayout.widget.ConstraintLayout>